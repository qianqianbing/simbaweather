<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.simba.clean.WaveProgressView
        android:id="@+id/waveProgressView"
        android:layout_width="324px"
        android:layout_height="324px"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:maxProgress="100"
        app:progress="80"
        app:progress_color="@color/colorLoadingProgress"
        app:radius="200px"
        app:radius_color="@color/colorRadius" />


    <RelativeLayout
        android:id="@+id/rl_cpuinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_circle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="81%"
                android:textColor="@color/colorWhite"
                android:textSize="65px" />


            <LinearLayout
                android:id="@+id/ll_cpuper"
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="5.2GB"
                    android:textColor="@color/colorWhite"
                    android:textSize="22px" />

                <TextView
                    android:layout_width="24px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="/"
                    android:textColor="@color/white30"
                    android:textSize="30px" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="8GB"
                    android:textColor="@color/white30"
                    android:textSize="22px" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cleanok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="182px"
            android:text="@string/tv_cleanok"
            android:textColor="@color/white30"
            android:textSize="22px"
            android:visibility="invisible"
            />

    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg"
    android:layout_width="wrap_content"
    android:layout_height="64dp"
    android:layout_margin="15dp"
    android:background="@mipmap/add_city_recommend_bg"
    android:gravity="center"
    android:minWidth="216dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/intro_margin_30"
        android:paddingRight="@dimen/intro_margin_30">

        <ImageView
            android:id="@+id/iv_add_city_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_city_local_icon" />

        <TextView
            android:id="@+id/tv_di"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="上海市"
            android:textColor="#FFFFFFFF"
            android:textSize="28sp" />
    </LinearLayout>

</RelativeLayout>




<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_bg_app"
    android:orientation="vertical"
    tools:context=".ui.activity.AddpendActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="75dp">

        <ImageView
            android:layout_width="18px"
            android:layout_height="32px"
            android:layout_centerVertical="true"
            android:src="@mipmap/bg_direction" />

        <TextView
            android:id="@+id/tv_ci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="添加城市"
            android:textColor="#FFFFFFFF"
            android:textSize="36dp" />

        <LinearLayout
            android:layout_width="806dp"
            android:layout_height="70dp"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@id/tv_ci">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/bg_direction" />

            <EditText
                android:layout_gravity="center"
                android:id="@+id/ed_search"
                android:textColor="@color/base_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:layout_marginLeft="120dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/bg_tuijian"/>
    <TextView
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_width="wrap_content"
        android:text="推荐城市"
        android:textSize="32px"
        android:textColor="#FFFFFFFF"
        android:layout_height="wrap_content"/>
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcy_citytj"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>
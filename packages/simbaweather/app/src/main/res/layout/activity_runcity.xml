<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_bg_app"
    android:orientation="vertical"
    tools:context=".ui.activity.RuncityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="120dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_centerVertical="true"
                android:layout_marginTop="92dp"
                android:src="@mipmap/bg_direction"
                android:id="@+id/iv_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:text="管理城市"
                android:textColor="#FFFFFFFF"
                android:textSize="36sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_compileon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60dp"
                    android:text="编辑"
                    android:textColor="#FFFFFFFF"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tv_compileoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60dp"
                    android:text="完成"
                    android:textColor="#FFFFFFFF"
                    android:textSize="32px" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="460dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="108dp"
                android:layout_marginBottom="60dp"
                android:background="@mipmap/bg_back"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_citymangername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:textColor="@color/base_white"
                    tools:text="南京市·鼓楼区" />

                <ImageView
                    android:id="@+id/iv_citymangerimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_citymangerwendu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:textSize="72sp"
                    tools:text="12°" />

                <TextView
                    android:id="@+id/tv_citymangermaxmin"
                    android:layout_width="113dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:textSize="28sp"
                    tools:text="22° / 10°" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/tv_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="100dp"
                    android:src="@mipmap/bg_add" />

                <RelativeLayout
                    android:layout_width="400dp"
                    android:layout_height="460dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="108dp"
                    android:background="@mipmap/bg_back"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:textColor="@color/base_white"
                        tools:text="南京市·鼓楼区" />

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="168dp"
                        android:layout_height="168dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="80dp"
                        android:gravity="center"
                        android:src="@drawable/qingtian" />

                    <TextView
                        android:id="@+id/tv_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_add"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:textColor="#ffffffff"
                        android:textSize="72sp"
                        tools:text="12°" />

                    <TextView

                        android:layout_width="113dp"
                        android:layout_height="32dp"
                        android:layout_below="@+id/tv_add"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:textColor="#ffffffff"
                        android:textSize="28sp"
                        tools:text="22° / 10°" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="400dp"
                android:layout_height="460dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="108dp"
                android:layout_marginBottom="60dp"
                android:background="@mipmap/bg_back"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tv_Addpend"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/bg_add" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
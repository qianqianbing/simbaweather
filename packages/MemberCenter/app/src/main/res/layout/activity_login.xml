<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
      android:layout_width="50px"
      android:layout_height="50px"
        android:background="@color/colorAccent">
    </ImageView>
    <LinearLayout
        android:layout_width="600px"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_QRLogin"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:textSize="@dimen/base_text_size_medium"
                android:gravity="center"
                android:text="@string/QR_login"/>
            <TextView
                android:id="@+id/tv_AccountLogin"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:textSize="@dimen/base_text_size_medium"
                android:gravity="center"
                android:text="@string/Account_login"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_QRLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:id="@+id/ll_AccountLogin"
                android:layout_width="300px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorAccent"
                android:visibility="gone">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:hint="@string/account"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:hint="@string/password"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/aggre_agreement"/>
                </LinearLayout>
                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/base_text_size_medium"
                    android:text="@string/login"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>


</RelativeLayout>
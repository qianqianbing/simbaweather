<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_popup"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_QR_help"
        android:layout_width="@dimen/QRCode_width"
        android:layout_height="@dimen/QRCode_height"
        android:layout_marginTop="@dimen/QRCode_help_margin_top"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_QR_help"
        android:layout_marginTop="@dimen/QRCode_more_help_text_margin_top"
        android:textSize="@dimen/base_text_size_medium"
        android:textColor="@color/base_default_text_color"
        android:text="@string/more_help"/>
    <TextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_QR_help"
        android:layout_marginTop="@dimen/QRCode_close_text_margin_top"
        android:textSize="@dimen/base_text_size_medium"
        android:textColor="@color/base_default_text_color"
        android:text="@string/close"/>
</RelativeLayout>
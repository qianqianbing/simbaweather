<?xml version="1.0" encoding="utf-8"?>

<resources>


    <!--************** RadiusImageView ****************-->
    <attr name="border_width" format="dimension" />
    <attr name="border_color" format="color" />
    <attr name="selected_mask_color" format="color" />
    <attr name="selected_border_color" format="color" />
    <attr name="selected_border_width" format="dimension" />
    <attr name="corner_radius" format="dimension" />
    <attr name="is_oval" format="boolean" />
    <attr name="is_circle" format="boolean" />
    <attr name="is_touch_select_mode_enabled" format="boolean" />
    <declare-styleable name="RadiusImageView">
        <attr name="border_width" />
        <attr name="border_color" />
        <attr name="selected_mask_color" />
        <attr name="selected_border_color" />
        <attr name="selected_border_width" />
        <attr name="corner_radius" />
        <attr name="is_oval" />
        <attr name="is_circle" />
        <attr name="is_touch_select_mode_enabled" />
    </declare-styleable>


    <attr name="RadiusImageViewStyle" format="reference" />
    <declare-styleable name="ViewPagerIndicator">
        <attr name="vpi_selected_color" format="color|reference"/>
        <attr name="vpi_default_color" format="color|reference"/>
        <attr name="vpi_radius" format="dimension|reference"/>
        <attr name="vpi_radius_selected" format="dimension|reference"/>
        <attr name="vpi_length" format="dimension|reference"/>
        <attr name="vpi_distance" format="dimension|reference"/>
        <attr name="vpi_num" format="integer"/>
        <attr name="vpi_indicatorType">
            <enum name="LINE" value="0" />
            <enum name="CIRCLE" value="1" />
            <enum name="CIRCLE_LINE" value="2" />
            <enum name="BEZIER" value="3" />
            <enum name="SPRING" value="4" />
            <enum name="PROGRESS" value="5" />
        </attr>
        <attr name="vpi_distanceType">
            <enum name="BY_RADIUS" value="0" />
            <enum name="BY_DISTANCE" value="1" />
            <enum name="BY_LAYOUT" value="2" />
        </attr>
        <attr name="vpi_animation" format="boolean"/>
    </declare-styleable>
</resources>

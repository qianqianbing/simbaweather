<?xml version="1.0" encoding="utf-8"?>
<com.simba.base.dialog.view.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1284px"
    android:layout_height="476px">

    <com.simba.base.dialog.view.SingleCheckBox
        android:id="@+id/cb_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginTop="15px"
        android:layout_marginBottom="15px"
        android:background="@android:color/transparent"
        android:button="@null"
        android:drawableLeft="@drawable/cb_bg"
        android:drawablePadding="15px"
        android:duplicateParentState="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/state_bg"
        android:paddingLeft="21px"
        android:paddingRight="21px">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="孤岛"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_size_28" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="使用中"
            android:textColor="#6CF8FC"
            android:textSize="@dimen/base_text_size_28" />
    </RelativeLayout>

</com.simba.base.dialog.view.CheckableRelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="510px"
    android:layout_height="190px"
    android:layout_marginTop="32px">


    <ImageView
        android:id="@+id/iv_lock_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/about_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/state_bg"
        android:paddingLeft="21px"
        android:paddingRight="21px">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="孤岛"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_size_28" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="已下载"
            android:textColor="@color/white_99"
            android:textSize="@dimen/base_text_size_28" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125px"
        android:layout_marginTop="104px"
        android:layout_marginRight="218px"
        android:layout_toLeftOf="@+id/about_logo"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_user_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginRight="28px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_about_user"
                android:drawablePadding="35px"
                android:text="用户协议"
                android:textColor="@color/base_white"
                android:textSize="@dimen/base_text_size_34" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_about_more" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="66px"
            android:layout_marginTop="48px"
            android:background="@color/white_trans_1a" />

        <RelativeLayout
            android:id="@+id/rl_contact_cs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="53px"
            android:layout_marginRight="28px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_about_customer_service"
                android:drawablePadding="35px"
                android:text="联系客服"
                android:textColor="@color/base_white"
                android:textSize="@dimen/base_text_size_34" />


            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="025-88888888"
                android:textColor="@color/white_cc"
                android:textSize="@dimen/base_text_size_28" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="66px"
            android:layout_marginTop="55px"
            android:background="@color/white_trans_1a" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52px"
            android:layout_marginRight="28px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_about_version"
                android:drawablePadding="35px"
                android:text="版本信息"
                android:textColor="@color/base_white"
                android:textSize="@dimen/base_text_size_34" />


            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:textColor="@color/white_cc"
                android:textSize="@dimen/base_text_size_28" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="66px"
            android:layout_marginTop="57px"
            android:background="@color/white_trans_1a" />
    </LinearLayout>

    <ImageView
        android:id="@+id/about_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="188px"
        android:src="@mipmap/icon_about_logo" />


</RelativeLayout>
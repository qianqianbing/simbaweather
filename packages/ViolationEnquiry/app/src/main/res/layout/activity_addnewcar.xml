<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/start_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plate_no"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10px"
            android:background="@drawable/edit_bg"
            android:drawableRight="@mipmap/icon_arrow"
            android:drawablePadding="19px"
            android:gravity="center_vertical"

            android:minWidth="120px"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:text="苏"
            android:textColor="@color/white"
            android:textColorHint="@color/white_trans_80"
            android:textSize="@dimen/text_size" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10px"
            android:background="@drawable/edit_bg"
            android:gravity="center_vertical"
            android:hint="@string/plate_no_hint"
            android:maxLength="7"
            android:minWidth="380px"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:textColor="@color/white"
            android:textColorHint="@color/white_trans_80"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车&#160;&#160;架&#160;&#160;号"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/et_vin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10px"
            android:background="@drawable/edit_bg"
            android:gravity="center_vertical"
            android:hint="最多十七位车架号"
            android:maxLength="17"
            android:minWidth="500px"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:textColor="@color/white"
            android:textColorHint="@color/white_trans_80"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发动机号"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10px"
            android:background="@drawable/edit_bg"
            android:gravity="center_vertical"
            android:hint="最多9位发动机号"
            android:minWidth="500px"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:textColor="@color/white"
            android:textColorHint="@color/white_trans_80"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:background="@mipmap/icon_submit"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_text_size" />

</LinearLayout>
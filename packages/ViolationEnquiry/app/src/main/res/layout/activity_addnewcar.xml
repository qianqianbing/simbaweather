<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/start_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plate_no"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_provinces"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10px"
            android:background="@drawable/edit_bg"
            android:drawableRight="@mipmap/icon_arrow"
            android:drawablePadding="19px"
            android:gravity="center_vertical"
            android:minWidth="120px"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:text="苏"
            android:textColor="@color/white"
            android:textColorHint="@color/white_trans_80"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/et_car_plate_no"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10px"
            android:background="@drawable/edit_bg"
            android:gravity="center_vertical"
            android:hint="@string/plate_no_hint"
            android:maxLength="7"
            android:minWidth="380px"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:textColor="@color/white"
            android:textColorHint="@color/white_trans_80"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_plate_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_error_bg"
        android:gravity="center"
        android:paddingTop="5px"
        android:text="@string/please_input_right_plate_no_info"
        android:textColor="@color/red_ff3b30"
        android:textSize="@dimen/small_text_size"
        android:visibility="gone" />

    <View
        android:id="@+id/view_plate"
        android:layout_width="wrap_content"
        android:layout_height="8px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/car_vin"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/et_vin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10px"
            android:background="@drawable/edit_bg"
            android:gravity="center_vertical"
            android:hint="@string/car_vin_hint"
            android:maxLength="17"
            android:minWidth="500px"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:textColor="@color/white"
            android:textColorHint="@color/white_trans_80"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_vin_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_error_bg"
        android:gravity="center"
        android:paddingTop="5px"
        android:text="@string/please_input_right_vin"
        android:textColor="@color/red_ff3b30"
        android:textSize="@dimen/small_text_size"
        android:visibility="gone" />

    <View
        android:id="@+id/view_vin"
        android:layout_width="wrap_content"
        android:layout_height="8px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/car_engine_no"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/et_engine_no"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10px"
            android:background="@drawable/edit_bg"
            android:gravity="center_vertical"
            android:hint="@string/car_engine_no_hint"
            android:maxLength="9"
            android:minWidth="500px"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:textColor="@color/white"
            android:textColorHint="@color/white_trans_80"
            android:textSize="@dimen/text_size" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_engine_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_error_bg"
        android:gravity="center"
        android:paddingTop="5px"
        android:text="@string/please_input_right_engine_no"
        android:textColor="@color/red_ff3b30"
        android:textSize="@dimen/small_text_size"
        android:visibility="gone" />

    <View
        android:id="@+id/view_engine"
        android:layout_width="wrap_content"
        android:layout_height="25px" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25px"
        android:background="@drawable/commit_bg"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_text_size" />

</LinearLayout>